<div class="text-center my-4">
  <div>
    <%= avatar(@user, 75, 75) %>
  </div>
  <div><strong><%= @user.full_name %></strong></div>
  <div><%= @user.email %></div>
  <% unless current_user == @user %>
    <%= generate_action_button_for(@user) %>
  <% end %>
</div>
<div class="feed">
  <% @posts.each do |post| %>
    <% if post.photos.length == 1 %>
      <%= render(partial: "photos/show", locals: { photo: post.photos.first }) %>
    <% else %>
      <%= render(partial: "posts/show", locals: { post: post, user: post.author }) %>
    <% end %>
  <% end %>
</div>
<%= paginate @posts %>