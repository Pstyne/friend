<% if post.is_a?(Post) %>
  <%= button_to [post.author, post, :likes], remote: true, "aria-label": "like", class: "btn btn-outline-secondary border-0" do %>
    <%= render "shared/like_button_content" %>
  <% end %>
<% else %>
  <%= button_to [post, :likes], remote: true, "aria-label": "like", class: "btn btn-outline-secondary border-0" do %>
    <%= render "shared/like_button_content" %>
  <% end %>
<% end %>
