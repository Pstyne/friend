<% if post.is_a?(Post) %>
  <%= button_to [post.author, post, post.likes.where(user_id: current_user.id).first], method: :delete, remote: true, "aria-label": "like", class: "btn btn-outline-secondary border-0 active" do %>
    <%= render "shared/like_button_content" %>
  <% end %>
<% else %>
  <%= button_to [post, post.likes.where(user_id: current_user.id).first], method: :delete, remote: true, "aria-label": "like", class: "btn btn-outline-secondary border-0 active" do %>
    <%= render "shared/like_button_content" %>
  <% end %>
<% end %>